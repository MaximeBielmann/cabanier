<div class="container">
    <div class="row">
        <div class="col-2">
            
        </div>
        <div class="col-8">
          
            <h2 class="title-form">Modifier mon compte</h2>

            <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>
          
            <div class="field">
              <%= f.label :email %><br />
              <%= f.email_field :email, class: "form-control", autofocus: true, autocomplete: "email" %>
            </div>
          
            <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
              <div>En attente de confirmation pour : <%= resource.unconfirmed_email %></div>
            <% end %>
          
            <div class="field">
              <%= f.label :mot_de_passe %> <i>(laissez vide si vous ne souhaitez pas changer)</i><br />
              <%= f.password_field :password, class: "form-control", autocomplete: "new-password" %>
              <% if @minimum_password_length %>
                <br />
                <em><%= @minimum_password_length %> caractères minimum</em>
              <% end %>
            </div>
          
            <div class="field">
              <%= f.label :confirmation_mot_de_passe %><br />
              <%= f.password_field :password_confirmation, class: "form-control", autocomplete: "new-password" %>
            </div>
          
            <div class="field">
              <%= f.label :mot_de_passe_actuel %> <i>(vous devez valider votre mot de passe actuel pour confirmer les changements)</i><br />
              <%= f.password_field :current_password, class: "form-control", autocomplete: "current-password" %>
            </div>
          
            <div class="actions">
              <%= f.submit "Mettre à jour", class: "btn-get-started scrollto" %>
            </div>
          <% end %>
            
        </div>
    </div>
</div>
<div class="container">
    <div class="row">
        <div class="col-2">
            
        </div>
        <div class="col-8">
            
            <h2 class="title-form">Supprimer mon compte</h2>
            
            <p>Vous n'êtes pas satisfait? <%= button_to "Supprimer mon compte", registration_path(resource_name), data: { confirm: "Vous êtes sûr?" }, method: :delete, class: "btn-get-started scrollto" %></p>
            
           
        </div>
    </div>
</div>